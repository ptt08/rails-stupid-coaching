<div class="container col-6">
  <div class="card m-3">
    <div class="card-header">
      Your question
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p><%= @question %></p>
        <footer class="blockquote-footer">You</footer>
      </blockquote>
    </div>
  </div>

  <div class="card m-3">
    <div class="card-header">
      Coach's answer
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p><%= @answer %></p>
        <footer class="blockquote-footer">Coach</footer>
      </blockquote>
    </div>
  </div>

  <%= link_to "Ask another question", ask_path %>
</div>
